# AutoFinance Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# Market Data API Keys
# =============================================================================

# Alpha Vantage - Free tier: 5 calls/min, 500 calls/day
# Get your key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Finnhub - Free tier: 60 calls/min
# Get your key: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_key_here

# Polygon.io - Free tier: 5 calls/min
# Get your key: https://polygon.io/dashboard/signup
POLYGON_API_KEY=your_polygon_key_here

# =============================================================================
# News API Keys
# =============================================================================

# News API - Free tier: 100 requests/day
# Get your key: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# =============================================================================
# Optional API Keys (for enhanced features)
# =============================================================================

# OpenAI - For LLM-based analysis and natural language queries
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# Anthropic Claude - Alternative LLM provider
# Get your key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# =============================================================================
# Server Configuration
# =============================================================================

# Port configuration for MCP servers
MARKET_SERVER_PORT=8001
TECHNICAL_SERVER_PORT=8002
FUNDAMENTAL_SERVER_PORT=8003
RISK_SERVER_PORT=8004
PORTFOLIO_SERVER_PORT=8005
EXECUTION_SERVER_PORT=8006
NEWS_SERVER_PORT=8007
ALERT_SERVER_PORT=8008
NOTIFICATION_SERVER_PORT=8009
VOLATILITY_SERVER_PORT=8010
MACRO_SERVER_PORT=8011
COMPLIANCE_SERVER_PORT=8012
SIMULATION_SERVER_PORT=8013

# =============================================================================
# Database Configuration (if using database storage)
# =============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/autofinance
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/autofinance.log

# =============================================================================
# Security Settings
# =============================================================================

# Secret key for session management
SECRET_KEY=your_secret_key_here_change_in_production

# Enable/disable debug mode (NEVER enable in production)
DEBUG=False

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_PAPER_TRADING=True
ENABLE_LIVE_TRADING=False
ENABLE_BACKTESTING=True
ENABLE_ALERTS=True
ENABLE_NOTIFICATIONS=True

# =============================================================================
# Email/Notification Configuration (optional)
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=autofinance@example.com

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# Trading Configuration
# =============================================================================

# Default risk per trade (as percentage of account)
DEFAULT_RISK_PER_TRADE=0.01

# Maximum portfolio allocation per position
MAX_POSITION_SIZE=0.20

# Trading hours (in UTC)
TRADING_START_HOUR=14
TRADING_END_HOUR=21

# =============================================================================
# Rate Limiting
# =============================================================================

# Requests per minute for internal rate limiting
API_RATE_LIMIT=60

# Cache TTL in seconds
CACHE_TTL=300

# =============================================================================
# Development Settings
# =============================================================================

# Enable hot reload for development
HOT_RELOAD=True

# Enable profiling
ENABLE_PROFILING=False

# Test mode (use mock data instead of real APIs)
TEST_MODE=False
